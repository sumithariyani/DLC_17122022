<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Sound Progress Bar -->

    <LinearLayout
        android:id="@+id/vol_progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="@drawable/progress_bar_bg"
        android:padding="10sp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/vol_progress"
            android:layout_width="5sp"
            android:layout_height="111sp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5sp"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/color_orange_1"
            android:progressDrawable="@drawable/vertical_progress_bar" />

        <ImageView
            android:id="@+id/vol_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/vol_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10sp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume: "
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/vol_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>




    <!--  Brightness Design  -->

    <LinearLayout
        android:id="@+id/brt_progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/progress_bar_bg"
        android:padding="10sp"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/brt_progress"
            android:layout_width="5sp"
            android:layout_height="111sp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5sp"
            android:max="100"
            android:progress="50"
            android:progressTint="@color/color_orange_1"
            android:progressDrawable="@drawable/vertical_progress_bar" />

        <ImageView
            android:id="@+id/brt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_brightness" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/brt_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10sp"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brightness: "
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/brt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14"
            android:textSize="16sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>




    <!--  Zoom Design  -->

    <RelativeLayout
        android:id="@+id/zoom_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:background="@drawable/progress_bar_bg"
        android:gravity="bottom"
        android:visibility="gone" >

        <TextView
            android:id="@+id/zoom_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="50%"
            android:textColor="@android:color/white"
            android:textSize="50sp"/>

    </RelativeLayout>




    <!-- Double Tap Play -->

    <RelativeLayout
        android:id="@+id/double_tap_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_play_arrow_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Paused" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>