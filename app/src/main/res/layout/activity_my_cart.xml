<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".MyCartActivity"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/llCartView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCartCountList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/my_cart"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/googlesans_bold"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:id="@+id/rvMyCart"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCheckout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/bg_white_top">

                <LinearLayout
                    android:id="@+id/llSetPromo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit"
                    android:elevation="@dimen/_3sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etApplyPromoCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/enter_promocode"
                        android:inputType="text"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/color_orange"
                        android:textColorHint="@color/color_grey" />

                    <TextView
                        android:id="@+id/tvApply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/apply"
                        android:textColor="@color/color_orange"
                        android:textSize="@dimen/_14sdp" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llViewPromoCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_edit"
                    android:elevation="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvValidPromoCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivDeletePromoCode"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:src="@drawable/ic_cross"
                        android:layout_gravity="center"
                        android:padding="@dimen/_5sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total"
                        android:layout_gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvRsprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:text="@string/discount"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/color_green"/>
                    <TextView
                        android:id="@+id/tvRs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/color_green"/>
                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/color_green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:text="@string/total_amount"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvRs1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rs"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_0"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvCheckOutBTN"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_pay_now_btn"
                    android:fontFamily="@font/googlesans_regular"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/check_out"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llEmptyCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cart_empty"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center"
                android:text="Your cart is empty\nPlease add a Package"
                android:textColor="@color/black"
                android:fontFamily="@font/googlesans_medium"
                android:layout_gravity="center"
                android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>
