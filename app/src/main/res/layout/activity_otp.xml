<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OtpActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivBackOtp"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_back"
                    android:layout_margin="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20sdp"
                    android:fontFamily="@font/googlesans_medium"
                    android:layout_marginStart="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edt_passcode1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/bg_edit"
                        android:hint=""
                        android:singleLine="true"
                        android:maxLength="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="number"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"/>
                    <EditText
                        android:id="@+id/edt_passcode2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/bg_edit"
                        android:hint=""
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:maxLength="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="number"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"/>
                    <EditText
                        android:id="@+id/edt_passcode3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/bg_edit"
                        android:hint=""
                        android:singleLine="true"
                        android:maxLength="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="number"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_bold"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"/>
                    <EditText
                        android:id="@+id/edt_passcode4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/bg_edit"
                        android:hint=""
                        android:singleLine="true"
                        android:maxLength="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_bold"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:inputType="number"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvUserMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/we_sent_an_sms_with_a_4_digit_code_to_919876543210"
                    android:textColor="@color/color_dark_grey"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/googlesans_regular"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvResendOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resend_code"
                    android:textColor="@color/color_app_orange"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/googlesans_medium"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_gravity="end"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvEditNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/black"
                    android:text="@string/edit_mobile_number"
                    android:drawablePadding="@dimen/_10sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/googlesans_regular"
                    app:drawableStartCompat="@drawable/ic_edit" />
                <TextView
                    android:id="@+id/btn_verify_account"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:text="@string/verify_account"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/ic_login_button"
                    android:paddingBottom="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/googlesans_regular"
                    android:textAllCaps="false"/>
            </LinearLayout>


        </RelativeLayout>

        </ScrollView>


    </LinearLayout>
</layout>
