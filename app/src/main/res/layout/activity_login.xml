<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LoginActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18sdp"
                        android:padding="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/googlesans_medium"
                        android:text="@string/existing_user_sign_in"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/bg_edit">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/india"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:fontFamily="@font/googlesans_medium"
                            android:drawablePadding="@dimen/_10sdp"
                            android:textColor="@color/color_dark_grey_1"
                            android:textSize="@dimen/_14sdp"
                            app:drawableStartCompat="@drawable/ic_india"
                            app:drawableEndCompat="@drawable/ic_next" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_dark_grey"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_91"
                                android:fontFamily="@font/opensans_medium"
                                android:padding="@dimen/_10sdp"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/black"/>
                            <View
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@color/color_dark_grey"/>
                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etMobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/enter_your_mobile_no"
                                android:background="@null"
                                android:maxLength="10"
                                android:inputType="number"
                                android:fontFamily="@font/googlesans_regular"
                                android:padding="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/color_dark_grey"
                                android:textSize="@dimen/_14sdp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/we_ll_send_you_a_code_by_sms_to_confirm_your_mobile_number"
                        android:textColor="@color/color_dark_grey"
                        android:fontFamily="@font/googlesans_regular"
                        android:textSize="@dimen/_12sdp"
                        android:layout_margin="@dimen/_10sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/supportCallNumber2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/googlesans_regular"
                            android:gravity="center"
                            android:text="Having trouble with DLC?"
                            android:textColor="@color/color_orange_1"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/supportCallNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:drawableStart="@drawable/ic_mobile_phone_1"
                            android:drawablePadding="@dimen/_5sdp"
                            android:fontFamily="@font/googlesans_regular"
                            android:gravity="center"
                            android:text="@string/_8989780888"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/googlesans_regular"
                            android:gravity="center"
                            android:text="10 A.M to 6 P.M"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8sdp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/ic_login_button"
                        android:backgroundTint="@color/color_app_orange"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/new_user"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/color_dark_grey"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="@dimen/_16sdp"/>
                            <TextView
                                android:id="@+id/ll_register"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/ic_login_button"
                                android:fontFamily="@font/googlesans_bold"
                                android:text="@string/register"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="@dimen/_20sdp"
                                android:layout_marginStart="@dimen/_70sdp"
                                android:layout_marginEnd="@dimen/_70sdp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp" />
                            <TextView
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/register"
                                android:textColor="@color/color_app_orange"
                                android:fontFamily="@font/googlesans_bold"
                                android:textSize="@dimen/_18sdp"/>
                        </LinearLayout>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tvClear_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_device_id"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/color_app_orange"
                            android:fontFamily="@font/googlesans_medium"
                            android:textSize="@dimen/_12sdp"/>
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


        </ScrollView>

    </LinearLayout>
</layout>
