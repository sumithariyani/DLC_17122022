<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_bg_packages"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_back_arrow"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_18sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/googlesans_bold"
                android:textColor="@color/white"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_cart"
                android:layout_gravity="center"/>
            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_notification"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excellent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_18sdp"
                android:fontFamily="@font/googlesans_bold"
                android:textColor="@color/black"/>

            <RatingBar
                android:clickable="true"
                android:id="@+id/popup_ratingbar1"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:numStars="5"
                android:layout_gravity="center"
                android:progressTint="@color/color_orange"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:focusable="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_dark_grey"/>

            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Give a compliement?"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_16sdp"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="@color/black"/>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Excellent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/bg_btn_orange"
                    android:textSize="@dimen/_14sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Great"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/bg_green_report"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Average"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/bg_btn_pirple"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write Your Review"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="@color/black"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/popup_edt_comments"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:hint="Review Title"
                android:background="@drawable/bg_edit"
                android:textColorHint="@color/color_dark_grey"
                android:textSize="@dimen/_14sdp"
                android:lines="5"
                android:gravity="start"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:text="@string/submit"
                android:textSize="@dimen/_16sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/ic_login_button"
                android:paddingBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>