<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llChapterVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVideoImage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_video_files"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvVideoName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/volume_1_a_c_in_english"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        app:fontFamily="@font/googlesans_regular"
                        android:layout_gravity="center"/>
                    <!--                <androidx.appcompat.widget.AppCompatTextView-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:text="@string/veer_gupta"-->
                    <!--                    android:layout_marginStart="@dimen/_10sdp"-->
                    <!--                    android:textSize="@dimen/_10sdp"-->
                    <!--                    android:textColor="@color/color_dark_grey"-->
                    <!--                    app:fontFamily="@font/googlesans_regular"-->
                    <!--                    android:layout_gravity="center"/>-->
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVideoPack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_video_play"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:id="@+id/view_filter"
                android:background="@drawable/bg_filler"
                android:layout_height="@dimen/_70sdp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>